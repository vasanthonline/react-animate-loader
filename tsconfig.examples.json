{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "types": [
      "node"
    ]
  },
  "include": ["./examples/*"],
  "exclude": ["node_modules"]
}