{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"],
}